require 'bundler/setup'

task default: :list

desc 'Lists all the tasks'
task :list do
  puts 'Tasks:'
  puts Rake::Task.tasks.join("\n- ")
end

desc 'Check for dependencies'
task :check do
  puts 'nothing yet'
end

desc 'Build package'
task :build do
  puts 'nothing yet'
end

desc 'Fire up Vagrant'
task :start do
  puts 'nothing yet'
end
